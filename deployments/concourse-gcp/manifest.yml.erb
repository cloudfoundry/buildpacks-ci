---
name: concourse
director_uuid: <%= concourse_gcp_bosh_director_uuid %>
releases:
- name: "concourse"
  version: "5.4.1"
  url: "https://bosh.io/d/github.com/concourse/concourse-bosh-release?v=5.4.1"
  sha1: "c7051a773cc33435f7d608a020d8e0765c8faf4a"
- name: "bpm"
  version: "1.1.0"
  url: "https://bosh.io/d/github.com/cloudfoundry/bpm-release?v=1.1.0"
  sha1: "82e83a5e8ebd6e07f6ca0765e94eb69e03324a19"
- name: windows-utilities
  version: 0.11.0
  url: "https://bosh.io/d/github.com/cloudfoundry-incubator/windows-utilities-release?v=0.11.0"
  sha1: efc10ac0f4acae23637ce2c6f864d20df2e3a781
- name: windows-tools
  version: 43
  url: "https://bosh.io/d/github.com/cloudfoundry-incubator/windows-tools-release?v=43"
  sha1: 82606431803a37645cca89d24ed7d73b7568ca62
instance_groups:
- name: web
  instances: 1
  vm_type: web
  azs:
  - z1
  stemcell: xenial
  networks:
  - name: public
    default:
    - dns
    - gateway
  - name: vip
    static_ips:
    - 104.196.174.175
  jobs:
  - release: bpm
    name: bpm
  - name: web
    release: concourse
    properties:
      container_placement_strategy: random
      add_local_users:
      - buildpacks:<%= concourse_basic_auth_password %>
      default_check_interval: 3m
      token_signing_key: ((token_signing_key))
      external_url: https://buildpacks.ci.cf-app.com
      publicly_viewable: true
      worker_gateway:
        host_key: ((tsa_host_key))
        authorized_keys:
        - ((worker_key.public_key))
        - "ssh-rsa  pivotal@john"
      main_team:
        auth:
          github:
            teams:
            - cloudfoundry:CF Buildpacks
            - "pivotal-cf:navigating-containers"
            - "pivotal:build-service"
            users:
            - nebhale
            - slowestgirl
            - sclevine
            - shanks3012
          local:
            users:
            - buildpacks
      github_auth:
        client_id: <%= gcp_concourse_github_auth_client_id %>
        client_secret: <%= gcp_concourse_github_auth_client_secret %>
      postgresql:
        database: <%= gcp_concourse_db_name %>
        role:
          name: <%= gcp_concourse_db_admin_user %>
          password: <%= gcp_concourse_db_admin_password %>
        host: <%= gcp_concourse_db_host %>
        sslmode: disable
      postgresql_database: <%= gcp_concourse_db_name %>
      tls:
        bind_port: 443
      lets_encrypt:
        enabled: true
      encryption_key: <%= gcp_concourse_encryption_key %>
- name: worker
  instances: 20
  vm_type: worker
  azs:
  - z1
  stemcell: xenial
  networks:
  - name: public
  jobs:
  - name: worker
    release: concourse
    properties:
      drain_timeout: 10m
      worker_gateway:
        worker_key: ((worker_key))

- name: windows-worker
  instances: 1
  vm_type: worker
  stemcell: windows2016
  networks:
  - name: public
  azs: [z1]
  jobs:
  - name: golang-windows
    release: windows-tools
  - name: git
    release: windows-tools
  - name: ginkgo
    release: windows-tools
  - name: enable_ssh
    release: windows-utilities
  - name: worker-windows
    release: concourse
    properties:
      drain_timeout: 10m
      worker_gateway:
        hosts:
        - 10.150.0.2:2222
        host_public_key: ((tsa_host_key.public_key))
        worker_key: ((worker_key))
variables:
- name: token_signing_key
  type: rsa
- name: tsa_host_key
  type: ssh
- name: worker_key
  type: ssh
update:
  canaries: 1
  max_in_flight: 4
  serial: false
  canary_watch_time: 1000-120000
  update_watch_time: 1000-120000
stemcells:
- alias: xenial
  os: ubuntu-xenial
  version: latest
- alias: windows2016
  os: windows2016
  version: latest

