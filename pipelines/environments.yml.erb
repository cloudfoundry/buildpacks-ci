<% environments = ['verge', 'frontier', 'limit']
   locks_per_environment = 4
   opsfiles = [
     '../cf-deployment/operations/windows2019-cell.yml',
     '../cf-deployment/operations/use-latest-stemcell.yml',
     '../cf-deployment/operations/use-latest-windows2019-stemcell.yml',
     '../cf-deployment/operations/experimental/enable-traffic-to-internal-networks.yml',
     '../cf-deployment/operations/experimental/disable-interpolate-service-bindings.yml',
     '../cf-deployment/operations/use-online-windows2019fs.yml',
     'deployments/operations/no-canaries.yml',
     'deployments/edge-shared/num-cells.yml',
   ]
   toolsmiths_envs = {'menifee' => 360, 'etna' => 238,'picorivera' => 417}
%>

resource_types: ########################################################################################################

  - name: slack-notification
    type: docker-image
    source:
      repository: cfcommunity/slack-notification-resource

  - name: cron
    type: docker-image
    source:
      repository: cfbuildpacks/cron-resource

  - name: bosh-deployment
    type: docker-image
    source:
      repository: cloudfoundry/bosh-deployment-resource

resources: #############################################################################################################

  ## Git Repos ##

  - name: cf-deployment-concourse-tasks
    type: git
    source:
      branch: master
      uri: https://github.com/cloudfoundry/cf-deployment-concourse-tasks.git
      tag_filter: v8.*

  - name: bbl-state
    type: git
    source:
      uri: git@github.com:cloudfoundry/buildpacks-envs
      branch: master
      private_key: {{buildpacks-envs-private-key}}

  - name: bosh-deployment
    type: git
    source:
      uri: https://github.com/cloudfoundry/bosh-deployment.git
      branch: master

  - name: cf-deployment
    type: git
    source:
      uri: https://github.com/cloudfoundry/cf-deployment
      branch: master

  - name: buildpacks-ci
    type: git
    source:
      uri: {{buildpacks-ci-git-uri-public}}
      branch: master

  - name: cflinuxfs3-bosh-release
    type: github-release
    source:
      user: cloudfoundry
      repository: cflinuxfs3-release
      access_token: {{buildpacks-github-token}}

  - name: r-buildpack
    type: git
    source:
      uri: https://github.com/cloudfoundry/r-buildpack
      branch: develop

  - name: nginx-buildpack
    type: git
    source:
      uri: https://github.com/cloudfoundry/nginx-buildpack
      branch: develop

  ## bosh.io Stemcells ##

  - name: gcp-stemcell
    type: bosh-io-stemcell
    source:
      name: bosh-google-kvm-ubuntu-xenial-go_agent

  - name: gcp-windows2016-stemcell
    type: bosh-io-stemcell
    source:
      name: bosh-google-kvm-windows2016-go_agent

  ## Slack Alerts ##

  - name: failure-alert
    type: slack-notification
    source:
      url: {{concourse-job-failure-notifications-slack-webhook}}

  ## Timers ##

  - name: 3am-daily-timer
    type: cron
    source:
      expression: 0 3 * * *
      location: {{current-timezone}}

  - name: once-a-week-timer
    type: cron
    source:
      expression: 0 10 * * 3
      location: {{current-timezone}}

  <% environments.each_with_index do |env, i| %>
  - name: once-a-week-timer-<%= env %>
    type: cron
    source:
      expression: 0 19 * * <%= i % 7 %>
      location: {{current-timezone}}
  <% end %>

  ## Pools ##

  - name: edge-environments
    type: pool
    source:
      branch: master
      pool: edge-environments
      private_key: {{public-buildpacks-ci-robots-private-key}}
      uri: git@github.com:cloudfoundry/public-buildpacks-ci-robots

jobs: ##################################################################################################################

<% environments.each do |env| %>
  - name: bbl-up-<%= env %>
    serial_groups: [ <%= env %> ]
    plan:
      - in_parallel:
        - get: buildpacks-ci
        - get: cf-deployment-concourse-tasks
        - get: edge-environments
        - get: bbl-state
        - get: bbl-config
          resource: bbl-state
      - task: bbl-up
        file: cf-deployment-concourse-tasks/bbl-up/task.yml
        params:
          BBL_GCP_SERVICE_ACCOUNT_KEY: {{gcp-service-account-key}}
          BBL_GCP_REGION: us-east1
          BBL_IAAS: gcp
          BBL_LB_CERT: {{brink_load_balancer_certificate}}
          BBL_LB_KEY: {{brink_load_balancer_private_key}}
          LB_DOMAIN: <%= env %>.buildpacks-gcp.ci.cf-app.com
          BBL_ENV_NAME: <%= env %>
          BBL_STATE_DIR: <%= env %>
          BBL_CONFIG_DIR: deployments/patches
        input_mapping:
          bbl-config: buildpacks-ci
        ensure:
          put: bbl-state
          params:
            repository: updated-bbl-state
            rebase: true
      - task: add-gcp-parent-dns-record
        file: buildpacks-ci/tasks/add-gcp-parent-dns-record/task.yml
        params:
          ENV_NAME: <%= env %>
          GCP_SERVICE_ACCOUNT_KEY: {{gcp-service-account-key}}
        on_success:
          do:
            - task: write-env-locks
              file: buildpacks-ci/tasks/write-env-locks/task.yml
              params:
                ENVIRONMENT: <%= env %>
                NUMBER_OF_LOCKS: <%= locks_per_environment %>
            - in_parallel:
              <% locks_per_environment.times do |lock_num| %>
              - put: edge-environments
                timeout: 1h
                params:
                  update: environment-locks/<%= env %><%= lock_num %>
              <% end %>

  - name: deploy-<%= env %>
    serial_groups: [ <%= env %> ]
    plan:
      - do:
        - in_parallel:
          - get: buildpacks-ci
          - get: bbl-state
            trigger: true
            passed: [bbl-up-<%= env %>]
          - get: cf-deployment
          - get: bosh-deployment
          - get: gcp-stemcell
          - get: gcp-windows2016-stemcell
          - get: cf-deployment-concourse-tasks
          - get: cflinuxfs3-bosh-release
          - get: r-buildpack
          - get: nginx-buildpack
          - get: ops-files
            resource: bbl-state
          - get: 3am-daily-timer
            trigger: true
          <% locks_per_environment.times do |lock_num| %>
          - put: edge-environments<%= lock_num %>
            timeout: 30m
            resource: edge-environments
            params:
              claim: <%= env %><%= lock_num %>
          <% end %>
        - in_parallel:
          - task: upload-bosh-release
            file: buildpacks-ci/tasks/upload-bosh-release/task.yml
            input_mapping:
              bosh-release: cflinuxfs3-bosh-release
            params:
              BBL_STATE_DIR: <%= env %>
              RELEASE: "*.tgz"
          - task: turn-on-bosh-dns # bosh-dns release gets removed up during bosh-cleanup so we bring it back every deploy
            file: buildpacks-ci/tasks/turn-on-bosh-dns/task.yml
            params:
              BBL_STATE_DIR: <%= env %>
        - task: clean-up-env-buildpacks
          file: buildpacks-ci/tasks/clean-up-env-buildpacks/task.yml
          params:
            ENV_NAME: <%= env %>
            ALLOW_FAILURE: true
        - task: bosh-deploy
          file: cf-deployment-concourse-tasks/bosh-deploy/task.yml
          attempts: 3
          input_mapping:
            vars-files: bbl-state
            ops-files: buildpacks-ci
          params:
            BBL_STATE_DIR: <%= env %>
            SYSTEM_DOMAIN: <%= env %>.buildpacks-gcp.ci.cf-app.com
            OPS_FILES: "<%= opsfiles.join(' ') %>"
        - task: clean-up-env-buildpacks
          attempts: 3
          file: buildpacks-ci/tasks/clean-up-env-buildpacks/task.yml
          params:
            ENV_NAME: <%= env %>
        on_failure:
          put: failure-alert
          params:
            text: "$BUILD_PIPELINE_NAME $BUILD_JOB_NAME job on Concourse failed! \n Check: $ATC_EXTERNAL_URL/teams/$BUILD_TEAM_NAME/pipelines/$BUILD_PIPELINE_NAME/jobs/$BUILD_JOB_NAME/builds/$BUILD_NAME"
            channel: {{concourse-job-failure-notifications-slack-channel}}
            username: concourse
            icon_url: http://cl.ly/image/3e1h0H3H2s0P/concourse-logo.png
        ensure:
          in_parallel:
            <% locks_per_environment.times do |lock_num| %>
            - put: edge-environments
              params:
                release: edge-environments<%= lock_num %>
            <% end %>

  - name: delete-cf-<%= env %>
    serial_groups: [ <%= env %> ]
    plan:
      - do:
        - in_parallel:
          - get: bbl-state
            passed: [deploy-<%= env %>]
          - get: cf-deployment-concourse-tasks
          - get: buildpacks-ci
          - get: once-a-week-timer-<%= env %>
            trigger: true
          <% locks_per_environment.times do |lock_num| %>
          - put: edge-environments<%= lock_num %>
            timeout: 30m
            resource: edge-environments
            params:
              claim: <%= env %><%= lock_num %>
          <% end %>
        - task: delete-deployment
          file: cf-deployment-concourse-tasks/bosh-delete-deployment/task.yml
          params:
            BBL_STATE_DIR: <%= env %>
            DEPLOYMENT_NAME: cf
        ensure:
          in_parallel:
          <% locks_per_environment.times do |lock_num| %>
          - put: edge-environments
            params:
              release: edge-environments<%= lock_num %>
          <% end %>

  - name: bosh-cleanup-<%= env %>
    plan:
      - do:
        - in_parallel:
          - get: bbl-state
            passed: [deploy-<%= env %>]
          - get: cf-deployment-concourse-tasks
          - get: 3am-daily-timer
            passed: [deploy-<%= env %>]
            trigger: true
          - get: once-a-week-timer-<%= env %>
            passed: [delete-cf-<%= env %>]
            trigger: true
          <% locks_per_environment.times do |lock_num| %>
          - put: edge-environments<%= lock_num %>
            timeout: 30m
            resource: edge-environments
            params:
              claim: <%= env %><%= lock_num %>
          <% end %>
        - task: bosh-cleanup
          file: cf-deployment-concourse-tasks/bosh-cleanup/task.yml
          params:
            BBL_STATE_DIR: <%= env %>
        ensure:
          in_parallel:
          <% locks_per_environment.times do |lock_num| %>
          - put: edge-environments
            params:
              release: edge-environments<%= lock_num %>
          <% end %>

  - name: bbl-destroy-<%= env %>
    serial_groups: [ <%= env %> ]
    plan:
      - in_parallel:
        <% locks_per_environment.times do |lock_num| %>
        - put: edge-environments<%= lock_num %>
          timeout: 30m
          resource: edge-environments
          params:
            claim: <%= env %><%= lock_num %>
        <% end %>
        - get: cf-deployment-concourse-tasks
        - get: bbl-state
        - get: bbl-config
          resource: bbl-state
          passed: [bosh-cleanup-<%= env %>]
        - get: buildpacks-ci
      - task: remove-gcp-parent-dns-record
        file: buildpacks-ci/tasks/remove-gcp-parent-dns-record/task.yml
        params:
          GCP_SERVICE_ACCOUNT_KEY: {{gcp-service-account-key}}
          ENV_NAME: <%= env %>
      - task: bbl-destroy
        file: cf-deployment-concourse-tasks/bbl-destroy/task.yml
        params:
          BBL_STATE_DIR: <%= env %>
          BBL_GCP_SERVICE_ACCOUNT_KEY: {{gcp-service-account-key}}
        on_success:
          in_parallel:
            <% locks_per_environment.times do |lock_num| %>
            - put: edge-environments
              params:
                remove: edge-environments<%= lock_num %>
            <% end %>
        ensure:
          put: bbl-state
          params:
            repository: updated-bbl-state
            rebase: true
<% end %>

<% toolsmiths_envs.each do |name, id| %>
  - name: renew-toolsmiths-environment-<%= name %>
    plan:
      - in_parallel:
        - get: buildpacks-ci
        - get: once-a-week-timer
          trigger: true
      - task: renew-toolsmiths-env
        tags: [environments.toolsmiths.cf-app.com-shared-vsphere-worker]
        file: buildpacks-ci/tasks/renew-toolsmiths-env/task.yml
        params:
          ENV_ID: <%= id %>
<% end %>

groups: ################################################################################################################
- name: all
  jobs:
  <% environments.each do |env| %>
  - bbl-up-<%= env %>
  - deploy-<%= env %>
  - delete-cf-<%= env %>
  - bosh-cleanup-<%= env %>
  - bbl-destroy-<%= env %>
  <% end %>
  <% toolsmiths_envs.each do |name, _| %>
  - renew-toolsmiths-environment-<%= name %>
  <% end %>
<% environments.each do |env| %>
- name: <%= env %>
  jobs:
  - bbl-up-<%= env %>
  - deploy-<%= env %>
  - delete-cf-<%= env %>
  - bosh-cleanup-<%= env %>
  - bbl-destroy-<%= env %>
<% end %>
